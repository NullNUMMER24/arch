# Bar
bar {
        status_command i3blocks -c /home/$USER/.config/i3/i3blocks.conf
        font pango: Droid Sans Mono 11
        position bottom
        i3bar_command i3bar --transparency
        colors{
          separator #00000000
          background #00000000
        }
}

